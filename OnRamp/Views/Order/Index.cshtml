@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Orders</h2>


<table id="ordertable" class="table table-striped" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                S.no
            </th>
            <th>
                Order Number
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Order Date
            </th>
            <th>
                Product Name
            </th>
            <th>
                Supplier Name
            </th>
            <th>
                Payment Status
            </th>
            <th>
                Product Status
            </th>
        </tr>
    </thead>
    <tbody data-bind="foreach: orders">
        <tr>
            <td data-bind="text: ($index() + 1)"></td>
            <td data-bind="text: Order_ID"></td>
            <td data-bind="text: Customer_Name"></td>
            <td data-bind="text: Date_Sold"></td>
            <td data-bind="text: Product_Name"></td>
            <td data-bind="text: Supplier_Name"></td>
            <td>
                <select class="drp" data-bind="options: $root.paymentStatus,
                        value: Payment_Received,
                        optionsText: 'name',
                        optionsValue:'id',
                        event: { change: $parent.updatePaymentStatus },
                        attr: { 'id': Order_ID},
                        "></select>
            </td>
            <td>
                <select data-bind="options: $root.productStatus,
                        value: Product_Status,
                        optionsText: 'name',
                        optionsValue:'id',
                         event: { change: $parent.updateProductStatus },
                       "></select>
            </td>
        </tr>
    </tbody>
</table>


<script src="~/assets/knockoutjs/KOListOrder.js"></script>
