
@model OnRamp.Model.Models.Category
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

    <style type="text/css">
        input.wrong-field {
            border: 1px solid red;
        }

        span.wrong-field {
            color: #FF0000;
        }
    </style>
</head>
<div class="form-horizontal">
    <h2>Add</h2>
    <hr>
    <div class="form-group hidden">
        <label class="control-label col-md-2" for="Category_ID">Category ID</label>
        
        <div class="col-md-10">
            <input class="form-control text-box single-line" id="Category_ID" name="Category_ID" type="hidden" value="" data-bind="value: Category_ID">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Category_Name">Category Name</label>
        <span class="required">*</span>
        <div class="col-md-10">
            <input class="form-control" id="Category_Name" name="Category_Name" type="text" value="" data-bind="value: Category_Name,validationElement: Category_Name">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Category_Description">Category Description</label>
        <span class="required">*</span>
        <div class="col-md-10">
            <input class="form-control text-box single-line" id="Category_Description" name="Category_Description" type="text" value="" data-bind="value: Category_Description,validationElement: Category_Description">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" data-bind="click: createCategory" value="Add" class="btn btn-default">
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script src="~/assets/knockoutjs/KOCreateCategory.js"></script>





