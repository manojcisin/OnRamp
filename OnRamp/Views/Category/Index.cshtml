@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Category</h2>

<p>
    @Html.ActionLink("Add Category", "Add")
</p>
<table id="categorytable" class="table table-striped" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                S.no
            </th>
            <th>
                CategoryName
            </th>
            <th>
                CategoryDescription
            </th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: categories">
        <tr>
            <td data-bind="text: ($index() + 1)"></td>
            <td data-bind="text: Category_Name"></td>
            <td data-bind="text: Category_Description"></td>
            
            <td>
                <a data-bind="attr: { 'href': '@Url.Action("Edit", "Category")/' + Category_ID }" class="btn-link">Edit</a>
                <a class="btnDelete" data-bind="attr: { 'id': Category_ID }" id=Category_ID>Delete</a>
            </td>
        </tr>
    </tbody>
</table>

<script src="~/assets/knockoutjs/KOListCategory.js"></script>